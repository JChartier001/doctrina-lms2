{
  "project": {
    "name": "Doctrina LMS",
    "type": "learning-management-system",
    "description": "Modern Learning Management System with Next.js, React 19, and Convex",
    "repository": "git",
    "packageManager": "bun",
    "version": "1.3.2",
    "nodeVersion": "24.10.0"
  },
  "frontend": {
    "framework": "Next.js",
    "version": "16.0.1",
    "router": "App Router",
    "features": [
      "Server Components (default)",
      "Partial Pre-Rendering (PPR)",
      "Turbopack (stable)",
      "Route Groups",
      "Layouts and Templates",
      "File-based routing"
    ],
    "library": "React",
    "reactVersion": "19.2.0",
    "stateManagement": "Convex (realtime, reactive)",
    "styling": {
      "framework": "Tailwind CSS",
      "version": "4.1.17",
      "utilities": ["tailwind-merge", "tailwindcss-animate", "class-variance-authority"]
    },
    "uiComponents": {
      "library": "Radix UI + shadcn/ui",
      "components": [
        "Accordion", "Alert", "Avatar", "Badge", "Button", "Calendar", "Card",
        "Carousel", "Checkbox", "Collapsible", "Command", "Context Menu",
        "Dialog", "Dropdown Menu", "Form", "Hover Card", "Input", "Label",
        "Menubar", "Navigation Menu", "Popover", "Progress", "Radio Group",
        "Scroll Area", "Select", "Separator", "Sheet", "Skeleton", "Slider",
        "Switch", "Tabs", "Table", "Textarea", "Toast", "Toggle", "Tooltip"
      ]
    },
    "forms": {
      "library": "React Hook Form",
      "version": "7.66.0",
      "validation": "Zod 4.1.12",
      "resolver": "@hookform/resolvers 5.2.2",
      "pattern": "FormProvider + Controller (REQUIRED)"
    },
    "animation": {
      "library": "Framer Motion",
      "version": "12.23.24"
    },
    "charts": {
      "library": "Recharts",
      "version": "3.3.0"
    }
  },
  "backend": {
    "platform": "Convex",
    "version": "1.28.2",
    "type": "realtime-database-with-functions",
    "features": [
      "Real-time queries (reactive)",
      "Mutations (transactional)",
      "Actions (side effects)",
      "Scheduled functions",
      "HTTP endpoints",
      "File storage"
    ],
    "helpers": "convex-helpers 0.1.104",
    "authentication": {
      "provider": "Clerk",
      "version": "6.34.5",
      "backendVersion": "2.20.0",
      "themes": "2.4.33",
      "features": ["JWT", "Session management", "User management", "OAuth"]
    },
    "payments": {
      "provider": "Stripe",
      "version": "19.3.0",
      "webhooks": "Svix 1.81.0"
    }
  },
  "database": {
    "type": "Convex",
    "schema": "Defined in convex/schema.ts",
    "tables": [
      "users", "courses", "courseModules", "lessons", "enrollments",
      "lessonProgress", "quizzes", "quizQuestions", "quizAttempts",
      "courseReviews", "resources", "favorites", "notifications",
      "liveSessions", "sessionParticipants", "certificates", "purchases"
    ],
    "patterns": [
      "Type-safe queries",
      "Automatic reactivity",
      "Server-side validation",
      "Indexed queries for performance"
    ]
  },
  "typescript": {
    "version": "5.9.3",
    "mode": "strict",
    "target": "ES6",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "pathAliases": {
      "@/*": ["./*"]
    }
  },
  "testing": {
    "framework": "Vitest",
    "version": "4.0.8",
    "coverage": "@vitest/coverage-v8 4.0.8",
    "ui": "@vitest/ui 4.0.8",
    "convexTesting": "convex-test 0.0.38",
    "reactTesting": "@testing-library/react",
    "commands": {
      "run": "bun vitest run",
      "watch": "bun vitest",
      "ui": "bun vitest --ui",
      "coverage": "bun vitest run --coverage"
    },
    "patterns": [
      "Test-driven development (TDD)",
      "100% coverage goal",
      "Unit + Integration tests",
      "Convex function testing with convex-test"
    ]
  },
  "codeQuality": {
    "linter": "ESLint 9.39.1",
    "lintConfig": [
      "eslint-config-next 16.0.1",
      "eslint-config-prettier 10.1.8",
      "@convex-dev/eslint-plugin 1.0.0",
      "eslint-plugin-no-only-tests 3.3.0",
      "eslint-plugin-prettier 5.5.4",
      "eslint-plugin-simple-import-sort 12.1.1"
    ],
    "formatter": "Prettier 3.6.2",
    "policy": "Zero warnings tolerance",
    "scripts": {
      "lint": "bun run eslint --max-warnings 0 .",
      "lintFix": "bun run eslint --fix --max-warnings 0 .",
      "format": "bun run prettier --check .",
      "formatFix": "bun run prettier --write .",
      "typecheck": "bun run tsc --noEmit",
      "verifyAll": "bun run formatting:fix && bun run lint:fix && bun run typescript && bun run test:coverage"
    }
  },
  "features": {
    "implemented": [
      "User authentication with Clerk",
      "Course management system",
      "Module and lesson structure",
      "Progress tracking",
      "Quiz system with auto-grading",
      "Certificate generation",
      "Payment processing with Stripe",
      "Resource library",
      "Notifications system",
      "Live sessions",
      "Favorites system",
      "Course reviews",
      "Search functionality",
      "Recommendations engine",
      "Analytics dashboard"
    ]
  },
  "architecture": {
    "pattern": "Next.js App Router with Server Components",
    "dataFlow": "Convex reactive queries (no useState for server data)",
    "authFlow": "Clerk JWT â†’ Convex auth integration",
    "fileStructure": {
      "app": "Next.js App Router pages and route groups",
      "components": "React components (UI library + custom)",
      "convex": "Backend functions (queries, mutations, actions)",
      "lib": "Utility functions and services",
      "hooks": "Custom React hooks",
      "schema": "Type definitions and validation schemas",
      "providers": "React context providers"
    },
    "routeGroups": [
      "(auth) - Authentication pages",
      "(dashboard) - Main application pages"
    ]
  },
  "deployment": {
    "platform": "Vercel (recommended for Next.js)",
    "backend": "Convex Cloud",
    "cicd": "GitHub Actions (potential)",
    "environments": ["development", "production"]
  },
  "standards": {
    "location": ".factory/standards/",
    "enforced": [
      "Next.js 16 App Router patterns",
      "React 19 Server Components",
      "TypeScript strict mode",
      "Convex reactive queries (no useState for server data)",
      "FormProvider + Controller pattern for forms",
      "Zero ESLint warnings policy",
      "Test-driven development",
      "Security best practices"
    ]
  },
  "droidz": {
    "initialized": true,
    "orchestrator": "Available (.factory/scripts/orchestrator.sh)",
    "droids": [
      "codegen - Feature implementation with tests",
      "generalist - General purpose fallback",
      "infra - CI/CD and deployment",
      "integration - External API integration",
      "refactor - Code quality improvements",
      "test - Testing specialist",
      "droidz-orchestrator - Parallel execution coordinator"
    ],
    "skills": [
      "auto-orchestrator", "brainstorming", "clerk", "convex",
      "defense-in-depth", "nextjs-16", "react", "security",
      "systematic-debugging", "tailwind-v4", "test-driven-development",
      "testing-anti-patterns", "typescript", "using-droidz",
      "verification-before-completion", "and more..."
    ],
    "memorySystem": {
      "org": ".factory/memory/org/ - Tech stack and decisions",
      "specs": ".factory/specs/ - Feature specifications",
      "standards": ".factory/standards/ - Coding standards"
    }
  },
  "bestPractices": {
    "research": {
      "sources": [
        "Next.js 16 official documentation",
        "Convex realtime database patterns",
        "React 19 Server Components best practices",
        "TypeScript strict mode guidelines"
      ],
      "keyFindings": [
        "Next.js 16 introduces Partial Pre-Rendering (PPR) for optimal caching",
        "Turbopack is now stable with 5-10x faster Fast Refresh",
        "React 19 enhances Server Components with better streaming",
        "Convex provides ubiquitous reactivity eliminating need for useState for server data",
        "Feature-based architecture preferred for scalability",
        "Co-locate related components, hooks, and tests"
      ]
    },
    "recommendations": [
      "Use Server Components by default, 'use client' only when needed",
      "Leverage Convex reactivity instead of useState for server data",
      "Implement FormProvider + Controller pattern for all forms",
      "Follow feature-based folder structure for scalability",
      "Maintain 100% test coverage with Vitest",
      "Use TypeScript strict mode with explicit types",
      "Apply zero-warnings ESLint policy",
      "Implement defense-in-depth validation (client + server)",
      "Use git worktrees for parallel development"
    ]
  }
}
